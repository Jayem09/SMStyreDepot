{
    "version": 2,
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/sitemap.xml",
            "destination": "/api/index.js"
        },
        {
            "source": "/robots.txt",
            "destination": "/api/index.js"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/images/(.*)",
            "destination": "/frontend/images/$1"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/frontend/assets/$1"
        },
        {
            "source": "/hero.png",
            "destination": "/frontend/hero.png"
        },
        {
            "source": "/logo.png",
            "destination": "/frontend/logo.png"
        },
        {
            "source": "/favicon.ico",
            "destination": "/frontend/favicon.ico"
        },
        {
            "source": "/((?!api/|images/|assets/|logo.png|favicon.ico|hero.png).*)",
            "destination": "/frontend/index.html"
        }
    ]
}